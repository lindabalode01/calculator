<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Result"
            android:layout_width="377dp"
            android:layout_height="159dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="67dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but1"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/but2"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but2"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/but1"
            app:layout_constraintEnd_toStartOf="@+id/but3"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but3"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/but2"
            app:layout_constraintEnd_toStartOf="@+id/butplus"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/butplus"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/but3"
            android:layout_marginEnd="43dp" app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#03A9F4"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/but1" app:layout_constraintEnd_toStartOf="@+id/but5"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but5"
            app:layout_constraintTop_toBottomOf="@+id/but2" app:layout_constraintStart_toEndOf="@+id/but4"
            app:layout_constraintEnd_toStartOf="@+id/but6"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/but6"
            app:layout_constraintStart_toEndOf="@+id/but5" app:layout_constraintTop_toBottomOf="@+id/but3"
            app:layout_constraintEnd_toStartOf="@+id/butminus"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/butminus"
            app:backgroundTint="#03A9F4"
            app:layout_constraintTop_toBottomOf="@+id/butplus" app:layout_constraintStart_toEndOf="@+id/but6"
            android:layout_marginEnd="43dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="7"
            android:layout_width="88dp"
            android:layout_height="49dp" android:id="@+id/but7"
            app:layout_constraintTop_toBottomOf="@+id/but4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/but8"/>
    <Button
            android:text="8"
            android:layout_width="89dp"
            android:layout_height="47dp" android:id="@+id/but8"
            app:layout_constraintTop_toBottomOf="@+id/but5" app:layout_constraintStart_toEndOf="@+id/but7"
            app:layout_constraintEnd_toStartOf="@+id/but9"/>
    <Button
            android:text="9"
            android:layout_width="88dp"
            android:layout_height="48dp" android:id="@+id/but9"
            app:layout_constraintTop_toBottomOf="@+id/but6" app:layout_constraintStart_toEndOf="@+id/but8"
            app:layout_constraintEnd_toStartOf="@+id/butmulti" android:layout_marginEnd="1dp"/>
    <Button
            android:text="*"
            android:layout_width="87dp"
            android:layout_height="48dp" android:id="@+id/butmulti"
            app:backgroundTint="#00BCD4"
            app:layout_constraintTop_toBottomOf="@+id/butminus" app:layout_constraintStart_toEndOf="@+id/but9"
            android:layout_marginEnd="43dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="88dp"
            android:layout_height="49dp" android:id="@+id/but0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/but7" app:layout_constraintEnd_toStartOf="@+id/butpoin"/>
    <Button
            android:text="."
            android:layout_width="88dp"
            android:layout_height="50dp" android:id="@+id/butpoin"
            app:layout_constraintStart_toEndOf="@+id/but7" app:layout_constraintTop_toBottomOf="@+id/but8"
            app:backgroundTint="#2196F3" app:layout_constraintEnd_toStartOf="@+id/butdev"/>
    <Button
            android:text="/"
            android:layout_width="90dp"
            android:layout_height="48dp" android:id="@+id/butdev"
            app:backgroundTint="#2196F3" app:layout_constraintStart_toEndOf="@+id/butpoin"
            app:layout_constraintTop_toBottomOf="@+id/but9"/>
    <Button
            android:text="="
            android:layout_width="89dp"
            android:layout_height="47dp" android:id="@+id/butres"
            app:layout_constraintTop_toBottomOf="@+id/butmulti" app:layout_constraintStart_toEndOf="@+id/butdev"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#E91E63"/>

</androidx.constraintlayout.widget.ConstraintLayout>